{
  "name": "scroll-triggers",
  "description": "A tiny, dependency-less javascript library to add classes as elements scroll into viewport.",
  "homepage": "https://github.com/firstandthird/scroll-triggers",
  "author": "First+Third",
  "license": "MIT",
  "version": "2.0.0",
  "main": "dist/scroll-triggers.js",
  "module": "index.js",
  "scripts": {
    "start": "scriptkit",
    "build": "scriptkit build",
    "dev": "scriptkit dev",
    "prepublish": "scriptkit"
  },
  "scriptkit": {
    "files": {
      "dist/scroll-triggers.js": "index.js"
    },
    "scripts": {
      "commonjs": {
        "ignore": [
          "node_modules/tape-rollup/*"
        ]
      }
    }
  },
  "watch": {
    "index.js": [
      "lint",
      "build"
    ]
  },
  "keywords": [
    "browser",
    "scroll",
    "declaritive"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/firstandthird/scroll-triggers.git"
  },
  "devDependencies": {
    "eslint-config-firstandthird": "3.2.0",
    "eslint-plugin-import": "2.2.0",
    "phantomjs": "2.1.7",
    "scriptkit": "0.0.22",
    "tap-spec": "4.1.1",
    "tape-rollup": "4.6.4",
    "tape-run": "2.1.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "firstandthird"
  }
}
